<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.alertutil.ui.BaseProgressBar
        android:id="@+id/dialog_progress_baseProgressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:tint="@android:color/white" />

    <android.base.ui.widget.BaseTextView
        android:id="@+id/dialog_progress_baseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_progress_baseProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Loading..." />
</RelativeLayout>